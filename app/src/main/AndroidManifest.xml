<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.meowfocus">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MeowFocus">

        <!-- MainActivity เป็นหน้าแรก (LAUNCHER) -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- FocusActivity - เพิ่มใหม่ -->
        <activity
            android:name=".FocusActivity"
            android:exported="false" />

        <!-- ShakeActivity -->
        <activity
            android:name=".ShakeActivity"
            android:exported="false" />

        <!-- StatisticsActivity -->
        <activity
            android:name=".StatisticsActivity"
            android:exported="false" />

        <!-- ShopActivity -->
        <activity
            android:name=".ShopActivity"
            android:exported="false" />

        <!-- BeginnerChallengesActivity -->
        <activity
            android:name=".BeginnerChallengesActivity"
            android:exported="false" />

    </application>

</manifest>
