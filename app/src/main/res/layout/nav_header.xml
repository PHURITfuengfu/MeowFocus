<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:background="#FFD4A0"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp">

    <ImageView
        android:id="@+id/profile_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/ic_profile_placeholder"
        android:background="@drawable/circle_background" />

    <!-- ชื่อผู้ใช้ + ไอคอนแก้ไข -->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp">

        <TextView
            android:id="@+id/profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User Name"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingEnd="8dp" />

        <ImageView
            android:id="@+id/edit_name_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_toEndOf="@id/profile_name"
            android:layout_centerVertical="true"
            android:src="@android:drawable/ic_menu_edit"
            android:clickable="true"
            android:focusable="true"
            android:padding="2dp" />
    </RelativeLayout>

    <!-- ✅ ปุ่มภาษาแบบง่าย -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp"
        android:gravity="center">

        <Button
            android:id="@+id/btnLanguageThai"
            android:layout_width="85dp"
            android:layout_height="36dp"
            android:text="ไทย"
            android:textSize="12sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:backgroundTint="#CA9158"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btnLanguageEnglish"
            android:layout_width="85dp"
            android:layout_height="36dp"
            android:text="EN"
            android:textSize="12sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:backgroundTint="#A0A0A0" />
    </LinearLayout>

</LinearLayout>
