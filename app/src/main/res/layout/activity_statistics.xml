<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#CA9158">

    <!-- Header Bar -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#CA9158"
        android:layout_marginTop="30dp"
        android:padding="12dp">

        <!-- ปุ่มกากบาทกลับ -->
        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_centerVertical="true"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:clickable="true"
            android:focusable="true"
            android:padding="4dp"
            app:tint="#FFFFFF" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/focus_time_statistics"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <!-- ส่วนแสดงบ้านและแมว -->
    <FrameLayout
        android:id="@+id/roomContainerStats"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.38"
        android:background="#E8D5C4">

        <!-- รูปบ้าน -->
        <ImageView
            android:id="@+id/homeImageStats"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_home"
            android:scaleType="fitCenter" />

        <!-- แมว -->
        <ImageView
            android:id="@+id/catImageStats"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="bottom|center"
            android:layout_marginBottom="20dp"
            android:src="@drawable/catwhite_frame1" />

    </FrameLayout>

    <!-- กล่องแสดงกราฟ -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6"
        android:layout_margin="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- หัวข้อและเวลารวม -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/focus_time_tracking"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#333333" />

            <TextView
                android:id="@+id/tvTotalTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/total_focus_time_format"
                android:textSize="14sp"
                android:textColor="#666666" />

            <!-- กราฟแท่ง -->
            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/barChart"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="16dp" />

            <!-- วันที่แสดง -->
            <TextView
                android:id="@+id/tvCurrentDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:text="November 20, 2025"
                android:textSize="14sp"
                android:textColor="#333333"
                android:textStyle="bold" />

            <!-- ปุ่มเลือกวัน -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="8dp">

                <Button
                    android:id="@+id/btnPrevDay"
                    android:layout_width="60dp"
                    android:layout_height="40dp"
                    android:text="◀"
                    android:textSize="16sp"
                    android:backgroundTint="#CA9158" />

                <TextView
                    android:id="@+id/tvSelectedDate"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Nov 20"
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp" />

                <Button
                    android:id="@+id/btnNextDay"
                    android:layout_width="60dp"
                    android:layout_height="40dp"
                    android:text="▶"
                    android:textSize="16sp"
                    android:backgroundTint="#CA9158" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
