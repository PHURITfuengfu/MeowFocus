<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#CA9158">

    <!-- Header -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#CA9158"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="8dp"
        android:layout_marginTop="30dp"
        android:paddingBottom="8dp">

        <!-- Close Button -->
        <ImageView
            android:id="@+id/btnBackChallenges"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_centerVertical="true"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:padding="6dp"
            android:clickable="true"
            android:focusable="true"
            app:tint="#FFFFFF" />

        <!-- Title -->
        <TextView
            android:id="@+id/tvTitleChallenges"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/beginner_challenges_title"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <!-- ScrollView for Challenges -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E8D5C4"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Challenge 1: Start Your First Focus Session -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Title -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/challenge_first_focus"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <!-- Description -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="@string/challenge_first_desc"
                        android:textColor="#666666"
                        android:textSize="13sp" />

                    <!-- Progress Bar -->
                    <ProgressBar
                        android:id="@+id/progressFirstFocus"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="12dp"
                        android:layout_marginTop="12dp"
                        android:progress="100"
                        android:max="100"
                        android:progressTint="#4CAF50" />

                    <!-- Status Text -->
                    <TextView
                        android:id="@+id/tvFirstFocusStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="@string/completed_ready"
                        android:textColor="#4CAF50"
                        android:textSize="12sp" />

                    <!-- Claim Button -->
                    <Button
                        android:id="@+id/btnFirstFocusClaim"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="12dp"
                        android:text="@string/first_focus_reward"
                        android:textAllCaps="false"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:backgroundTint="#CA9158"
                        android:textColor="#FFFFFF" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Challenge 2: Focus for 5 Minutes -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/challenge_focus_5min"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="@string/challenge_focus_5min_desc"
                        android:textColor="#666666"
                        android:textSize="13sp" />

                    <ProgressBar
                        android:id="@+id/progressFocus5min"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="12dp"
                        android:layout_marginTop="12dp"
                        android:progress="0"
                        android:max="100"
                        android:progressTint="#9E9E9E" />

                    <TextView
                        android:id="@+id/tvFocus5minStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="@string/in_progress"
                        android:textColor="#666666"
                        android:textSize="12sp" />

                    <Button
                        android:id="@+id/btnFocus5minClaim"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="12dp"
                        android:text="@string/claim_reward"
                        android:textAllCaps="false"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:backgroundTint="#D0A175"
                        android:textColor="#FFFFFF"
                        android:enabled="false" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Challenge 3: Focus for 10 Minutes -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/challenge_focus_10min"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="@string/challenge_focus_10min_desc"
                        android:textColor="#666666"
                        android:textSize="13sp" />

                    <ProgressBar
                        android:id="@+id/progressFocus10min"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="12dp"
                        android:layout_marginTop="12dp"
                        android:progress="0"
                        android:max="100"
                        android:progressTint="#9E9E9E" />

                    <TextView
                        android:id="@+id/tvFocus10minStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="@string/in_progress"
                        android:textColor="#666666"
                        android:textSize="12sp" />

                    <Button
                        android:id="@+id/btnFocus10minClaim"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="12dp"
                        android:text="@string/claim_reward"
                        android:textAllCaps="false"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:backgroundTint="#D0A175"
                        android:textColor="#FFFFFF"
                        android:enabled="false" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Challenge 4: Feed Your Cat 5 Times -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/challenge_feed_5"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="@string/challenge_feed_5_desc"
                        android:textColor="#666666"
                        android:textSize="13sp" />

                    <ProgressBar
                        android:id="@+id/progressFeed5"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="12dp"
                        android:layout_marginTop="12dp"
                        android:progress="0"
                        android:max="100"
                        android:progressTint="#9E9E9E" />

                    <TextView
                        android:id="@+id/tvFeed5Status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="@string/in_progress"
                        android:textColor="#666666"
                        android:textSize="12sp" />

                    <Button
                        android:id="@+id/btnFeed5Claim"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="12dp"
                        android:text="@string/claim_reward"
                        android:textAllCaps="false"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:backgroundTint="#D0A175"
                        android:textColor="#FFFFFF"
                        android:enabled="false" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
